<!DOCTYPE html>
<html lang="en">

<%- include('includes/head') %>

<body>

<header>
    <div class = "navContainer">

        <div class="logo">
            <i class="fas fa-project-diagram"></i>
            <span>Algorithms</span>
        </div>

        <div class = "navLinks">
            <a href="https://github.com/Josink/Sinkaiye-CS203-F25-G6-Project2-Website" target="_blank"><i class="fab fa-github"></i> GitHub</a>
            <a href="/algorithms"><i class="fas fa-sort-amount-down"></i> Algorithms</a>
        </div>

        <div class = "authenticationButton">
            <a href="/" class="btn btn-outline">Home</a>
            <a href="/logout" class="btn btn-primary">Log out</a>
        </div>

    </div>



</header>

<main>

    <div class = container>
        <div class = title>
            <h1>Your Dashboard</h1>
        </div>

        <div class = previousPosts>
            <ul>
                <% posts.forEach(post =>{ %>
                    <li><a href = "/post/<%= post.id %>"><%= post.attemptName%></a> on <%= new Date(post.createdDate).getMonth() + 1%>/<%= new Date(post.createdDate).getDate()%>/<%= new Date(post.createdDate).getFullYear()%> </li>
                <% }) %>
            </ul>
        </div>

        <div class="algorithmSelectContainer">
            <h3>Choose an algorithm type:</h3>

            <div class="dds">

                <div class="dropDown">
                    <button type="button" onclick="toggleSearchDropDown()" class="dropButton">Search</button>
                    <div id="mySearchDropDown" class="searchDropDownContent">
                        <a href="#" onclick="handleAlgorithmSelect('Sequential Search')">Sequential Search</a>
                        <a href="#" onclick="handleAlgorithmSelect('Binary Search')">Binary Search</a>
                    </div>
                </div>

                <div class="dropDown">
                    <button type="button" onclick="toggleSortDropDown()" class="dropButton">Sort</button>
                    <div id="mySortDropDown" class="sortDropDownContent">
                        <a href="#" onclick="handleAlgorithmSelect('Selection Sort')">Selection Sort</a>
                        <a href="#" onclick="handleAlgorithmSelect('Bubble Sort')">Bubble Sort</a>
                        <a href="#" onclick="handleAlgorithmSelect('Insertion Sort')">Insertion Sort</a>
                        <a href="#" onclick="handleAlgorithmSelect('Merge Sort')">Merge Sort</a>
                        <a href="#" onclick="handleAlgorithmSelect('Quick Sort')">Quick Sort</a>
                        <a href="#" onclick="handleAlgorithmSelect('Heap Sort')">Heap Sort</a>
                    </div>
                </div>

            </div>
        </div>

        <div id="inputForm" class="inputForm" style="display:none;">
            <h4 id="formTitle">Configure Your Algorithm</h4>

            <form id="algorithmForm" action="/run-algorithm" method="post">
                <input type="hidden" id="algorithmName" name="algorithmName">

                <div class="form-group">
                    <label for="attemptName">Attempt Name</label>
                    <input type="text" id="attemptName" name="attemptName" placeholder="Enter a name for this attempt" required>
                </div>

                <div class="form-group">
                    <label for="valueCount">Number of Values</label>
                    <input type="number" id="valueCount" name="numValues" min="1" max="1000000" placeholder="Enter number of values" required>
                </div>

                <div class="form-actions">
                    <button type="button" class="btn-cancel" onclick="cancelForm()">Cancel</button>
                    <button type="submit" class="btn-submit">Run Algorithm</button>
                </div>
            </form>
        </div>
    </div>
</main>

<%- include('includes/footer') %>

</body>

</html>